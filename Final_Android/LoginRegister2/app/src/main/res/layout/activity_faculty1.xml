<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tejassangani.loginregister.Faculty1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewcourse"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty 1"
        android:background="#2E86C1"
        android:padding="30dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/tvfaculty1"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty 2"
        android:textColor="#FFFFFF"
        android:background="#2E86C1"
        android:layout_marginBottom="15dp"
        android:padding="30dp"
        android:id="@+id/tvfaculty2"
        android:layout_below="@+id/tvfaculty1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvfaculty3"
        android:layout_alignEnd="@+id/tvfaculty3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty 3"
        android:textColor="#FFFFFF"
        android:background="#2E86C1"
        android:padding="30dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/tvfaculty3"
        android:layout_below="@+id/tvfaculty2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty 4"
        android:layout_marginBottom="15dp"
        android:textColor="#FFFFFF"
        android:background="#2E86C1"
        android:padding="30dp"
        android:id="@+id/tvfaculty4"
        android:layout_below="@+id/tvfaculty3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faculty 5"
        android:layout_marginBottom="15dp"
        android:textColor="#FFFFFF"
        android:background="#2E86C1"
        android:padding="30dp"
        android:id="@+id/tvfaculty5"
        android:layout_below="@+id/tvfaculty4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
