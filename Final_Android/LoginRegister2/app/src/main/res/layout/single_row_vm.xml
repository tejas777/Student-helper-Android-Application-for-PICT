<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vision"
        android:paddingBottom="7dp"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:id="@+id/tvvision"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#2E86C1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="vision description"
        android:textColor="#FFFFFF"
        android:paddingLeft="15dp"
        android:id="@+id/tvvisiondescription"
        android:background="#2E86C1"
        android:layout_alignRight="@+id/tvvision"
        android:layout_alignEnd="@+id/tvvision"
        android:layout_below="@+id/tvvision"
        android:layout_alignLeft="@+id/tvvision"
        android:layout_alignStart="@+id/tvvision" />


</RelativeLayout>