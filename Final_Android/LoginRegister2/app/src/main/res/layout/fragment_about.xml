<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tejassangani.loginregister.AboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewlabmanuals1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College"
        android:background="#2E86C1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="30dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tvcollege"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Science"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#2E86C1"
        android:padding="30dp"
        android:id="@+id/tvcsvm"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/tvcollege"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information Teachnology"
        android:textColor="#FFFFFF"
        android:background="#2E86C1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:padding="30dp"
        android:id="@+id/tvitvm"
        android:layout_below="@+id/tvcsvm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electronic And Telecommunication"
        android:textColor="#FFFFFF"
        android:background="#2E86C1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="30dp"
        android:id="@+id/tventcvm"
        android:layout_below="@+id/tvitvm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
